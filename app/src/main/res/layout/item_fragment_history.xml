<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_history"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <ImageView
        android:id="@+id/image_history_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_not_favorite_24dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/image_history_icon"
        android:layout_toStartOf="@+id/text_history_translation_direction"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

    <TextView
        android:id="@+id/text_history_in_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language"/>

    <TextView
        android:id="@+id/text_history_out_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Язык"
        android:layout_below="@+id/eng_lang"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_history_translation_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eng - rus"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>